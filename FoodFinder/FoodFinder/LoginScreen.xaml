<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodFinder.LoginScreen">
    
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <On Platform="iOS" Value="20, 40, 20, 20"/>
            <On Platform="Android" Value="50"/>
        </OnPlatform>
    </ContentPage.Padding>

    <StackLayout VerticalOptions="CenterAndExpand">
        <Image Source="http://www.utas.edu.au/__data/assets/image/0007/858157/UTAS-Colour-Horizontal.png"
                   Aspect="AspectFit"/>

        <Label Text="Simple Actions Towards Sustainability"
               HorizontalOptions="CenterAndExpand"
               FontSize="Small"/>

        <Label Text="Food Finder"
               HorizontalOptions="CenterAndExpand" VerticalOptions="Start"
               FontAttributes="Bold"
               FontSize="Large"
               />

        <Entry Placeholder="Email" Keyboard="Email" HorizontalTextAlignment="Center"/>

        <Entry Placeholder="Password" IsPassword="True" HorizontalTextAlignment="Center"/>

        <Button x:Name="loginButton" Text="Login"
                />

        <Label x:Name="signupLink" Text="Not a member? Click Here to Join!"
               HorizontalOptions="Center" TextColor="Blue"       
               />
    </StackLayout>
</ContentPage>
